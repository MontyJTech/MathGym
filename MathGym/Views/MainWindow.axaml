    <Border DockPanel.Dock="Top" Background="#161616" Height="32">
      <Grid>
        <Rectangle Name="DragArea" Fill="Transparent" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"></Rectangle>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,5,0">
          <Button Content="ðŸ—•" Command="{Binding minimizeCommand}" Background="Transparent" Foreground="#e1e1e6"/>
          <Button Content="ðŸ—–" Command="{Binding maximizeCommand}" Background="Transparent" Foreground="#e1e1e6"/>
          <Button Content="ðŸ—™" Command="{Binding closeCommand}" Background="Transparent" Foreground="Red"/>
        </StackPanel>
      </Grid>
    </Border>
    <Grid Background="#1e1e1e">
      <TextBlock Text="App Content Here" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="#e1e1e6"/>
    </Grid>
  </DockPanel>
</Window>
